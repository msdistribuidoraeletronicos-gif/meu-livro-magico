{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": [
        "app.js",
        "admin.page.js",
        "generate.page.js",
        "books/**",
        "public/**",
        "landing.html",
        "how-it-works.html",
        "exemplos.html"
      ]
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}